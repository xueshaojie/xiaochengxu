<div class="col-md-12">
  <div class="article">
    <%= link_to("新建文章", new_article_path, class: "btn btn-primary pull-right") %>
  </div>
  <table id="vweddingTable" class="table table-striped table-bordered table-hover dataTable">
    <thead>
      <tr>
        <td>标题</td>
        <td>分类</td>
        <td>内容</td>
        <td>作者</td>
        <td>状态</td>
        <td width="170">操作</td>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.category_name %></td>
          <td><%= article.text %></td>
          <td> <%= article.user.email %> </td>
          <td><%= article.status_name %></td>
          <td>
              <%= link_to("编辑", edit_article_path(article), class: "btn btn-sm btn-default")%>
              <%= link_to("详情", article_path(article),  class: "btn btn-sm btn-default")%>
              <%= link_to("删除", article_path(article),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "你确定要删除这篇文章吗？" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
